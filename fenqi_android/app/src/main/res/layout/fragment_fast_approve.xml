        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_topmsg"
            android:background="@mipmap/circle_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_approving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_approving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审核中"
                        android:gravity="center"
                        android:textColor="@color/black_gray_text"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/iv_approving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_approving"
                        android:layout_marginTop="5dp" />

                </LinearLayout>
                <View
                    android:id="@+id/line_approving"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"/>
                <LinearLayout
                    android:id="@+id/rl_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_approvingtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审核中，请耐心等候"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="@color/pink_text_color"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_approving24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计24小时内完成审核"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/pink_text_color"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_toApprove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.6"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_identyMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.身份信息"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text_black"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.学籍信息"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text_black"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_contancs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.联系方式"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text_black"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_o2o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.电商认证"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text_black"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_identySure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.身份识别"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text_black"
                        android:gravity="center"/>
                </LinearLayout>


                <View
                    android:id="@+id/view_line_approving"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />

                    <LinearLayout
                        android:id="@+id/rl_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <Button
                            android:id="@+id/bt_approve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="急速认证"
                            android:background="@drawable/button_selector"
                            android:textColor="@color/white"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/bt_approving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="急速认证成功"
                            android:textSize="25sp"
                            android:layout_above="@+id/tv_bottom"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/black_gray_text"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认证通过后可获得额度¥3000-¥5000"
                            android:textColor="@color/black_gray_text"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"/>
                    </LinearLayout>

